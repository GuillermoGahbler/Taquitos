<h1>Eat Fresh Tacos!</h1>

<main>
  <div class="container">
    <div class="row">
      <div class="col s6">
        {{#each tacos}}
          {{#unless this.devoured}}
            <div>
              <form action="/tacos/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='tacoAvailable'> {{this.taco_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}
      </div>

      <div class="col s6">
        {{#each tacos}}
          {{#if this.devoured}}
            <div class='tacoEaten'>
              <div>
                {{this.taco_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}
      </div>
    </div>
  </div>
</main>

<h2>Add A Taco Option</h2>
  <div>
       <form action="tacos/" method="POST">
        <input type="text" id="name" name="taco_name" placeholder="Add some yummy Tacos!">
        <button type="submit" class="addTacoButton">Add The Taco</button>
      </form>
   </div>
    
  </div>
</div>

 